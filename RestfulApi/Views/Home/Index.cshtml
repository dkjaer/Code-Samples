@model List<RestfulApi.Models.UserModel>

<script type="text/javascript">

    function deleteUser(id, firstName, lastName) {
        if (confirm("The user \"" + firstName + " " + lastName + "\" will be deleted.\n\nClick OK to proceed")) {
            $.ajax({
                url: '@Url.Action("User", "Home")/' + id,
                type: "DELETE",
                contentType: "application/json;charset=utf-8",
				success: function () {
                    window.location.href = '@Url.Action()';
                }
            });
        }
    }

</script>
